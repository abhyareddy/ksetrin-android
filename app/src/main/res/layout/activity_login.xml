<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.LoginActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/loginActivityCardView"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_margin="30dp"
        style="@style/Widget.Material3.CardView.Filled"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/loginActivityLinearLayout"
        />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="@id/loginActivityCardView"
        app:layout_constraintRight_toRightOf="@id/loginActivityCardView"
        app:layout_constraintLeft_toLeftOf="@id/loginActivityCardView"
        app:layout_constraintBottom_toBottomOf="@id/loginActivityCardView"

        />
    <LinearLayout
        android:id="@+id/loginActivityLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/loginActivityCardView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:padding="50dp"
        android:gravity="center_horizontal">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/loginActivityTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:inputType="phone"
            style="@style/ThemeOverlay.Material3.TextInputEditText.FilledBox"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/loginActivitySendOtpButton"
            android:text="Send OTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>