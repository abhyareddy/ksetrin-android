<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/eachReminderCardView"
        style="@style/Widget.Material3.CardView.Filled"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/eachReminderTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/eachReminderCardView"
        app:layout_constraintRight_toRightOf="@id/eachReminderCardView"
        app:layout_constraintTop_toTopOf="@id/eachReminderCardView"
        app:layout_constraintBottom_toTopOf="@+id/eachReminderTextView2"
        />

    <TextView
        android:id="@+id/eachReminderTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/eachReminderTextView1"
        app:layout_constraintBottom_toBottomOf="@id/eachReminderCardView"
        app:layout_constraintLeft_toLeftOf="@id/eachReminderCardView"
        app:layout_constraintRight_toRightOf="@id/eachReminderCardView"
        />

</androidx.constraintlayout.widget.ConstraintLayout>